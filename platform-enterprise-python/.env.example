# Platform Enterprise Python - Environment Variables Example
# Copy this file to .env and update values for your environment

# ============================================================
# Common Settings
# ============================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_JSON=false

# ============================================================
# Database (PostgreSQL)
# ============================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=platform

# ============================================================
# Redis
# ============================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================
# JWT Authentication
# ============================================================
# Generate with: python tools/scripts/generate_secret.py
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# API Gateway (platform-api)
# ============================================================
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_AUTH_SERVICE_URL=http://localhost:8001
API_USER_SERVICE_URL=http://localhost:8002

# ============================================================
# Auth Service (platform-auth)
# ============================================================
AUTH_HOST=0.0.0.0
AUTH_PORT=8001
AUTH_DEBUG=true
AUTH_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/platform_auth

# ============================================================
# User Service (platform-user)
# ============================================================
USER_HOST=0.0.0.0
USER_PORT=8002
USER_DEBUG=true
USER_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/platform_user

# ============================================================
# Notification Service (platform-notification)
# ============================================================
NOTIFICATION_HOST=0.0.0.0
NOTIFICATION_PORT=8003
NOTIFICATION_DEBUG=true
NOTIFICATION_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/platform_notification

# SMTP Settings
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_FROM_EMAIL=noreply@platform.com
SMTP_FROM_NAME=Platform

# ============================================================
# Worker (platform-worker)
# ============================================================
WORKER_CONSUMER_GROUP=platform-workers
WORKER_CONSUMER_NAME=worker-1
WORKER_BATCH_SIZE=10

# ============================================================
# Observability
# ============================================================
OTLP_ENDPOINT=http://localhost:4317
